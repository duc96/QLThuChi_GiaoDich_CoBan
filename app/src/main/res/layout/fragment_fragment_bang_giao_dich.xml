<?xml version="1.0" encoding="UTF-8"?>

<FrameLayout
    android:id="@+id/fragmentBangGiaoDich"
    tools:context=".fragment.FragmentBangGiaoDich"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/nen_ngoai">
    <LinearLayout
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <LinearLayout
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@color/xamhon"
        >

        <TextView
            android:id="@+id/tvMaGD"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Mã GD"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_margin="3dp"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/tvNgayGD"
            android:layout_width="0dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_height="match_parent"
            android:layout_weight="2.5"
            android:text="Ngày GD"
            android:layout_margin="3dp"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/tvSoTien"
            android:layout_width="0dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_height="match_parent"
            android:layout_weight="2.5"
            android:text="Số Tiền"
            android:layout_margin="3dp"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/tvMaKhoan"
            android:layout_width="0dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:text="Mã Khoản"
            android:layout_margin="3dp"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/tvMoTa"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:text="Mô Tả"
            android:layout_margin="3dp"
            android:gravity="center"
            />
    </LinearLayout>

    <ListView
        android:id="@+id/lvBangGiaoDich"
        android:background="@color/xamnhe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        />
    </LinearLayout>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fbtnBangGiaoDich"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_anchorGravity="bottom|right|end"
        app:layout_anchor="@id/fragmentBangGiaoDich"
        android:src="@drawable/ic_floatbutton"
        android:layout_margin="16dp"
        android:layout_gravity="bottom|right"/>

</FrameLayout>