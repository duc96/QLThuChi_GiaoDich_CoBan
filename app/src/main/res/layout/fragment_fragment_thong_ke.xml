<?xml version="1.0" encoding="UTF-8"?>

    <FrameLayout
    tools:context=".fragment.FragmentThongKe"
    android:background="@drawable/nen_ngoai"
    android:id="@+id/fragmentThongKe"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <TextView
            android:id="@+id/tvTieuDe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chọn Khoảng Thời Gian Cần Thống Kê"
            android:gravity="center"
            android:textSize="23dp"
            android:layout_margin="20dp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/tvTuNgay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Từ ngày"
            android:layout_marginTop="16dp"
            android:layout_below="@id/tvTieuDe"
            android:textSize="20sp"
            android:layout_marginLeft="50dp"
            android:textStyle="italic"
            />

        <TextView
            android:id="@+id/tvDenNgay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đến ngày"
            android:layout_marginTop="16dp"
            android:layout_below="@id/tvTieuDe"
            android:textSize="20sp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="50dp"
            android:textStyle="italic"
            />

        <Button
            android:id="@+id/btnTim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tìm"
            android:textSize="20sp"
            android:layout_below="@id/tvTuNgay"
            android:layout_margin="30dp"
            />

        <TextView
            android:id="@+id/tvNoiDung"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/btnTim"
            android:textSize="25dp"
            android:layout_margin="20sp"
            />
    </RelativeLayout>
</FrameLayout>